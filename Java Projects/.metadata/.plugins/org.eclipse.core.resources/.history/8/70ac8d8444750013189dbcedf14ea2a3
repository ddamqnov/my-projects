package persistence;

import java.util.List;

import javax.management.Query;
import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.Persistence;



public class main {
static EntityManagerFactory factory;
	public static void main(String[] args) {
		// TODO Auto-generated method stub
factory=Persistence.createEntityManagerFactory("login");
EntityManager em = factory.createEntityManager();
javax.persistence.Query q = em.createQuery("select u from UserInfo u");
List<UserInfo> todoList = q.getResultList();
for (UserInfo user : todoList) {
  System.out.println(user);
}
System.out.println("Size: " + todoList.size());

// create new todo
em.getTransaction().begin();
UserInfo u = new UserInfo();
u.setUserName("Kolio");
u.setUserPassword("kamion123");
em.persist(u);
em.getTransaction().commit();

em.close();

	}

}
